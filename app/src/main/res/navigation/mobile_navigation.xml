<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    android:label="@string/menu_about"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.fredrick.hymnalpro.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_bookmark"
        android:name="com.fredrick.hymnalpro.ui.bookmark.BookmarkFragment"
        android:label="@string/menu_bookmark"
        tools:layout="@layout/fragment_bookmark">
        <argument android:name="Bookmarks" />
    </fragment>

    <fragment
        android:id="@+id/nav_about"
        android:name="com.fredrick.hymnalpro.ui.about.aboutFragment"
        android:label="@string/menu_about" >
        <argument android:name="About" />
    </fragment>
</navigation>